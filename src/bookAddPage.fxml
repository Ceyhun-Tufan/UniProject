<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="640.0" spacing="15.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Kitap Ekleme">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="İsim" alignment="CENTER" />
            <TextField fx:id="nametext" prefWidth="200.0" maxWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Yazar" alignment="CENTER" />
            <TextField fx:id="writertext" prefWidth="200.0" maxWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Sayfa" alignment="CENTER" />
            <TextField fx:id="pagetext" prefWidth="200.0" maxWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Yıl" alignment="CENTER" />
            <TextField fx:id="yeartext" prefWidth="200.0" maxWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Tür" alignment="CENTER" />
            <TextField fx:id="genretext" prefWidth="200.0" maxWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Adet" alignment="CENTER" />
            <TextField fx:id="stocktext" prefWidth="200.0" maxWidth="200.0" />
         </children>
      </VBox>
      <Button fx:id="addButton" mnemonicParsing="false" onMouseClicked="#handleAddButtonClick" text="Ekle" />
   </children>
</VBox>

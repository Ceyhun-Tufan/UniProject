<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="640.0" spacing="15.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookAddPageController">
   <children>
      <Label text="Kitap Ekleme">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="İsim" />
            <TextField fx:id="nametext" maxWidth="200.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="Yazar" />
            <TextField fx:id="writertext" maxWidth="200.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="Sayfa" />
            <TextField fx:id="pagetext" maxWidth="200.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="Yıl" />
            <TextField fx:id="yeartext" maxWidth="200.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="Tür" />
            <TextField fx:id="genretext" maxWidth="200.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="Adet" />
            <TextField fx:id="stocktext" maxWidth="200.0" prefWidth="200.0" />
         </children>
      </VBox>
      <Button fx:id="addButton" mnemonicParsing="false" onMouseClicked="#handleAddButtonClick" text="Ekle" />
   </children>
</VBox>
